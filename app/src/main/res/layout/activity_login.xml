<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_javeshop_header" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Correo javeriano"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:id="@+id/activity_login_email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/activity_login_email"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Contraseña"
        android:singleLine="true"
        android:inputType="textPassword"
        android:id="@+id/activity_login_password"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_password"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Iniciar sesión"
        android:background="#0D47A1"
        android:textColor="#fff"
        android:id="@+id/activity_login_loginButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_loginButton"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Registrarse"
        android:background="#0D47A1"
        android:textColor="#fff"
        android:id="@+id/activity_login_registerButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_registerButton"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="¿Olvidaste tu contraseña?"
        android:background="#0D47A1"
        android:textColor="#fff"
        android:id="@+id/activity_login_forgotPasswordButton"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/activity_login_loginButton"
        android:layout_alignBottom="@id/activity_login_loginButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_login_progressBar"/>

</RelativeLayout>